    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9EFFF"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/textView2"
        android:layout_width="368dp"
        android:layout_height="100dp"
        android:background="#5C8CF8"
        android:gravity="center_vertical"
        android:text="버스 출발시간 알림 서비스"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/button_main"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_main"
        android:layout_width="44dp"
        android:layout_height="100dp"
        android:background="@color/blue"
        android:gravity="center"
        android:text="@string/left"
        android:textColor="@color/white"
        android:textSize="25dp"
        tools:ignore="MissingConstraints" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="350dp"
        android:layout_height="260dp"
        android:layout_marginTop="24dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RadioButton
            android:id="@+id/button_middle"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/button_shape2"
            android:text="   본관행" />

        <RadioButton
            android:id="@+id/button_social"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_shape2"
            android:text="   사회과학대행" />

        <RadioButton
            android:id="@+id/button_global"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_shape2"
            android:text="   글로벌하우스행" />

    </RadioGroup>


