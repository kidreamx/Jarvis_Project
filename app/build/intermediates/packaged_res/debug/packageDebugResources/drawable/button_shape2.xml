<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 그림자 레이어 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#AFAFAF"/> <!-- 그림자 색상 및 투명도 설정 -->
            <corners android:radius="10dp"/> <!-- 모서리 둥글기 설정 -->
        </shape>
    </item>

    <!-- 원래 버튼 레이어 -->
    <item android:left="0dp" android:top="0dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFF"/> <!-- 버튼 배경 색상 -->
            <stroke
                android:width="2dp"
                android:color="@android:color/transparent" />
            <corners
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp" />
            <padding android:padding="10dp"/>
        </shape>
    </item>

</layer-list>
